{
	"name": "cure-eat-2",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "npm run start:pb-dev & vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "vitest --watch false",
		"test:watch": "vitest --watch",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"pb": "docker compose -f dev.pocketbase.docker-compose.yml run --entrypoint pocketbase pocketbase",
		"start:pb-test": "docker compose -f 'test.pocketbase.docker-compose.yml' up -d",
		"stop:pb-test": "docker compose -f 'test.pocketbase.docker-compose.yml' down",
		"start:pb-dev": "docker compose -f 'dev.pocketbase.docker-compose.yml' up",
		"stop:pb-dev": "docker compose -f 'dev.pocketbase.docker-compose.yml' down"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.20.4",
		"@types/firebase": "^3.2.1",
		"@types/lodash-es": "^4.17.11",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.16",
		"aws-cdk": "^2.110.1",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"postcss": "^8.4.31",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.3.3",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^5.3.2",
		"vite": "^4.4.2",
		"vitest": "^0.34.6",
		"vitest-fetch-mock": "^0.2.2"
	},
	"dependencies": {
		"aws-cdk-lib": "^2.110.1",
		"constructs": "^10.3.0",
		"fp-ts": "^2.16.1",
		"lodash-es": "^4.17.21",
		"pocketbase": "^0.18.2"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
